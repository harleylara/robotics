---
const props = Astro.props;
// weird whitespace insert by astro: https://github.com/NordSecurity/storyblok-rich-text-astro-renderer/issues/263
// fix: single line
---
<style is:global>

/* remove the default style of the `A` component */
h2 a, h3 a, h4 a {
    border: none;
    text-decoration: none;
}

h2 a,
h3 a,
h4 a,
h5 a,
h6 a {
    border: none;
    text-decoration: none;
    opacity: 0;
    transition: opacity 0.3s ease;
}

h2:hover a,
h3:hover a,
h4:hover a,
h5:hover a,
h6:hover a {
  opacity: 1; /* Show the link when hovering over the parent */
}

/* this is to style the link element added by `rehype-autolink-headings` */
span.icon-link::before {
  border: none;
  content: '#';
  color: gray;
  font-size: 1em;
  vertical-align: top;
  margin-left: 5px;
  opacity: 0.4;
}
</style>

<a {...props} class="border-b border-white hover:border-b-2"><slot/></a>
