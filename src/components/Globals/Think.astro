---
import { markToHtml } from "../../tools/helper.parser";
const props = Astro.props;

export interface Props {
    note: string,
}

const {
    note, 
} = Astro.props;

---

<div class="bg-dark-49 text-gray-900 dark:text-white pl-4 py-2 mt-6 border-l-8 border-l-blue-900 text-justify">
    <p class="font-bold">Just think for a moment:</p>
    <p class="mt-2" set:html={markToHtml(note)}></p>
</div>
