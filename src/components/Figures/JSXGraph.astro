---
import BaseContainer from "../Globals/BaseContainer.astro";

interface Props {
  id: string;
  classname?: string;
  style?: string;
}

const { 
  classname = "jsxbox",
  style = "width: 100%; height: 100%",
  id,
} = Astro.props;
---

<BaseContainer>
  <div id="figure" class="flex flex-col items-center w-full h-96">
    <div id={id} class={classname} style={style}>
    </div>
    <slot/>
  </div>
</BaseContainer>
